<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailedPinActivity" 
	android:layout_height="match_parent"
	android:layout_width="match_parent" >

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
		
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/detailed_pin_title_bar"
	        android:background="@drawable/detailed_pin_title_bar"
	         >
	        <TextView 
	            android:id="@+id/detailed_pin_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor = "#FF0000FF"
				android:textSize = "15sp"
				android:textStyle = "italic"
				android:singleLine = "true"   
				android:layout_marginLeft="30dp"
				android:layout_marginTop="8dp"
				/>
	    </RelativeLayout>
	    
	    <HorizontalScrollView 
	        xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/horizontalScrollView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		     >
	          
	        <LinearLayout
		        android:id="@+id/horizontalScrollLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="320dp"
		        android:orientation="horizontal" 
		        android:background="#e4e7e4"
		        >
		        <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/detailed_pin_photo_frame"
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="10dp"
			        >
			        <ImageView 
			            android:src="@drawable/photo_1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:layout_marginLeft="10dp"
			            />
		        </RelativeLayout>
		        
	   	        <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/detailed_pin_photo_frame"
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="10dp"
			        >
			        <ImageView 
			            android:src="@drawable/photo_2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:layout_marginLeft="10dp"
			            />
		        </RelativeLayout>
		        
	   	        <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/detailed_pin_photo_frame"
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="10dp"
			        >
			        <ImageView 
			            android:src="@drawable/photo_3"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:layout_marginLeft="10dp"
			            />
		        </RelativeLayout>
		        
	   	        <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/detailed_pin_photo_frame"
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="10dp"
			        >
			        <ImageView 
			            android:src="@drawable/photo_4"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:layout_marginLeft="10dp"
			            />
		        </RelativeLayout>
		        
				<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="20dp"
					>
			        <ImageView 
			            android:src="@drawable/detailed_pin_add_photo"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="270dp"
			            android:layout_marginLeft="10dp"
			            />
		        </RelativeLayout>
			</LinearLayout>
	    </HorizontalScrollView>
	    
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/detailed_pin_photoalbum_underline"
	        />
	    
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:background="#FFFFFF"
		    android:orientation="vertical" 
		    android:minHeight="90dp"
		    >
		    <TextView 
		        android:id="@+id/content_content"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
	           	android:textSize="15sp"
		        />
		    
		    <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" 
			    android:layout_marginTop="30dp"
			    android:layout_marginLeft="200dp"
			    >
	   		    <TextView 
	   		        android:id="@+id/content_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize = "10sp"
					/>
			    <TextView 
			        android:id="@+id/content_writer"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:textSize="10sp"
			        android:layout_marginLeft="10dp"
			        />
		    </LinearLayout>

		</LinearLayout>
		
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/detailed_pin_content_underline"
			>
	        <TextView 
	            android:id="@+id/comment_reply"
	  	        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="15sp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="2dp"
	            />
		</RelativeLayout>
		
		<LinearLayout
		    android:id="@+id/itemReplyList"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF"
			android:orientation="vertical"
			>
	        <TextView 
	            android:id="@+id/msgNoReply"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="댓글이 없습니다."
		        android:textSize="15sp"
		        android:layout_marginTop="18dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginBottom="18dp"
		        android:visibility="gone"
		        />
		</LinearLayout>
			
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/detailed_pin_reply_bar"
			>
			<ImageView 
			    android:src="@drawable/detailed_pin_reply_bar_emoticon"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp"
			    android:layout_marginLeft="10dp"
			    />
			<EditText
			    android:id="@+id/edittext_reply"
		        android:layout_width="250dp"
		        android:layout_height="30dp"
		        android:hint="@string/reply_hint"
		        android:textSize="17sp"
		        android:width="250dp"
		        android:layout_centerHorizontal="true"
		        android:background="#ffffff"
		        android:layout_marginTop="6dp"
                android:singleLine="true"
		        />
			 <TextView 
			    android:id="@+id/button_send_reply"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="전송"
		        android:textSize="20sp"
		        android:layout_marginLeft="310dp"
		        android:layout_marginTop="5dp"
		        />
		</RelativeLayout>
	</LinearLayout>
</ScrollView>