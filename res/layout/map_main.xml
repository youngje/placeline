<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    >
        <LinearLayout 
    	xmlns:tools="http://schemas.android.com/tools"
   	 	android:layout_width="200dp"
    	android:layout_height="fill_parent"
    	android:layout_gravity="left"
    	android:orientation="vertical"
    	android:id="@+id/friendslist"
    	android:padding="0dp"
    	android:layout_margin="0dp"
    	android:background="#ffffff"
    	android:visibility="gone">

	   <RelativeLayout
	       android:id="@+id/friendlist_upbar"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:background="@drawable/status_bar_nothing" >
	
	       <TextView
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:layout_alignParentLeft="true"
	           android:layout_margin="10dp"
	           android:text="@string/friendlist_upbar"
	           android:textColor="#424251"
	           android:textSize="17sp" 
	           android:gravity="center_vertical"/>
	   </RelativeLayout>
	
	   <ListView
	       android:id="@+id/friendlist_view"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:background="#ffffff"
	       android:scrollbarStyle="insideOverlay" 
	       android:layout_margin="5dp">
	   </ListView>

	   <RelativeLayout 
	    	android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:padding="5dp"
	    	>
		   	<ImageView
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:src="@drawable/add_friend_button"
		       tools:ignore="ContentDescription"
		       android:layout_marginLeft="5dp"
		       android:id="@+id/friend_add_button" />
			 <TextView 
			    android:id="@+id/friend_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/friend_add"
		        android:textSize="20sp"
				android:textStyle="bold"
		        android:textColor="#00aea2"
				android:layout_toRightOf="@id/friend_add_button"
				android:layout_centerVertical="true"
				android:layout_margin="3dp"
		        />
		</RelativeLayout>
	
	   <ImageView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:src="@drawable/detailed_pin_photoalbum_underline"
		    tools:ignore="ContentDescription" 
		    android:padding="3dp"/>
	</LinearLayout>
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:id="@+id/mapview_layout"
    	>
	    <RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    >
			<com.nhn.android.maps.NMapView 
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent" 
		    	android:id="@+id/mapView"
	    		/>
			<ImageView 
			    android:id="@+id/imageview_friend"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp"
			    android:layout_marginLeft="5dp"
			    />
			<ImageView 
			    android:id="@+id/imageview_connectpins"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="230dp"
			    android:layout_marginTop="5dp"
			    />
			<ImageView 
			    android:id="@+id/imageview_addpin"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="295dp"
			    android:layout_marginTop="5dp"/>
			<ImageView 
			    android:id="@+id/imageview_currentlocation"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="295dp"
			    android:layout_marginBottom="5dp"
			    android:layout_alignParentBottom="true"
			    />
		    <ImageView 
		    	android:id="@+id/fullscreen"    
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:background="#44444444"
		        android:visibility="gone"
		        />
			<LinearLayout 
			    android:id="@+id/writing_board"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:orientation="vertical"
		    	android:visibility="gone"
		    	>
	    	  	<RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/detailed_pin_title_bar"
			         >
			        <EditText
			            android:id="@+id/add_pin_title"
				        android:layout_width="320dp"
				        android:layout_height="30dp"
	   			        android:gravity="top"
				        android:textSize="14sp"
				        android:textColor = "#333333"
				        android:padding="3dp"
				        android:layout_marginLeft="30dp"
				        android:layout_marginTop="3dp"
				        android:hint="제목을 입력하세요."
				        />
		    	</RelativeLayout>
	    		<EditText
	            	android:id="@+id/add_pin_content"
			        android:layout_width="fill_parent"
			        android:layout_height="80dp"
   			        android:gravity="top"
			        android:textSize="17sp"
			        android:textColor = "#333333"
			        android:background="#FFFFFF"
			        android:padding="5dp"
			        android:hint="내용을 입력하세요."
			        />
	    		<HorizontalScrollView 
			        xmlns:android="http://schemas.android.com/apk/res/android"
				   	android:layout_width="fill_parent"
			        android:layout_height="100dp"
			        android:background="@drawable/writeboard_photoalbum_background"
			     	>
			        <LinearLayout
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent"
				        android:orientation="horizontal" 
				        android:paddingTop="10dp"
				        android:paddingLeft="10dp"
				        >
				        <LinearLayout 
				            android:layout_width="90dp"
				            android:layout_height="80dp"
				            android:layout_marginRight="20dp"
				            android:background="@drawable/writeboard_photo_frame"
				            android:padding="5dp">
				            <ImageView 
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:background="@drawable/photo_small_1"/>
				        </LinearLayout>
			         	<LinearLayout 
				            android:layout_width="90dp"
				            android:layout_height="80dp"
				            android:layout_marginRight="20dp"
				            android:background="@drawable/writeboard_photo_frame"
				            android:padding="5dp">
				            <ImageView 
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:background="@drawable/photo_small_2"/>
				        </LinearLayout>
			        	<LinearLayout 
				            android:layout_width="90dp"
				            android:layout_height="80dp"
				            android:layout_marginRight="20dp"
				            android:background="@drawable/writeboard_photo_frame"
				            android:padding="5dp">
				            <ImageView 
				                android:layout_width="fill_parent"
				                android:layout_height="fill_parent"
				                android:background="@drawable/photo_small_3"/>
				        </LinearLayout>
				        <ImageView 
				            android:layout_width="80dp"
				            android:layout_height="70dp"
				            android:background="@drawable/writeboard_photo_add"
				            android:layout_marginTop="5dp"
				            android:padding="5dp"/>
					</LinearLayout>
			    </HorizontalScrollView>
			    <LinearLayout 
   		         	android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="#F3F4F3"
			        android:paddingLeft="10dp"
			        android:paddingRight="10dp"
			        android:paddingTop="3dp"
			        android:paddingBottom="3dp"
			        android:orientation="horizontal"
			        android:gravity="center_horizontal"
	    		    >
			        <ImageView 
			            android:id="@+id/button_writing_pin_cancel"
			            android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:background="@drawable/writeboard_cancel"
				        android:layout_marginRight="10dp"/>
   			        <ImageView 
   			            android:id="@+id/button_writing_pin_send"
			            android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:background="@drawable/writeboard_send"/>
			    </LinearLayout>
			    <ImageView 
		        	android:layout_width="fill_parent"
			        android:layout_height="30dp"
			        android:background="@drawable/writeboard_balloon"
			        />
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>

</FrameLayout>

