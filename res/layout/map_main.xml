<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    >
        <LinearLayout 
    	xmlns:tools="http://schemas.android.com/tools"
   	 	android:layout_width="200dp"
    	android:layout_height="fill_parent"
    	android:layout_gravity="left"
    	android:orientation="vertical"
    	android:id="@+id/friendslist"
    	android:padding="0dp"
    	android:layout_margin="0dp"
    	android:background="#ffffff"
    	android:visibility="gone">

	   <RelativeLayout
	       android:id="@+id/friendlist_upbar"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:background="@drawable/add_group_upbar" >
	
	       <TextView
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:layout_alignParentLeft="true"
	           android:layout_margin="10dp"
	           android:text="@string/friendlist_upbar"
	           android:textSize="15sp" />
	   </RelativeLayout>
	
	   <ListView
	       android:id="@+id/friendlist_view"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:background="#ffffff"
	       android:scrollbarStyle="insideOverlay" >
	   </ListView>
	
	   <ImageView
	       android:layout_width="250dp"
	       android:layout_height="40dp"
	       android:src="@drawable/ic_friend_default"
	       tools:ignore="ContentDescription" />

	</LinearLayout>
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:id="@+id/mapview_layout"
    	>
    
		<com.nhn.android.maps.NMapView 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="fill_parent" 
	    	android:id="@+id/mapView"
    		/>
	</LinearLayout>

</FrameLayout>

